<header class="navbar navbar-static-top navbar-default">
    <div class="navbar-inner">
      <div class="container">
		<div class="row">
            <div class="span2">
		       <%= link_to image_tag("mylogo.png", alt: "batterystore.com"), root_path %>
		    </div>
		    <div class="span8 offset2">
            <%= link_to "Battery Store", root_path, id: "logo" %>
            <nav>
              <ul class="nav pull-right">
				  <li><%= link_to "FAQ", faq_path %></li>
					<% if signed_in? %>
				  <li id="fat-menu" class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
					  Аккаунт <b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
					  <li><%= link_to "Профиль", current_user %></li>	
						<% if current_user.cart.nil?
							current_user.cart=Cart.create
						end %>
					  <li><%= link_to "Корзина ("+current_user.cart.batteries.count.to_s+")", current_user.cart%></li>
					  <li class="divider"></li>
					  <li>
						<%= link_to "Выйти", signout_path, method: "delete" %>
					  </li>
					</ul>
				  </li>
				<% else %>
				  <li><%= link_to "Войти", signin_path %></li>
				  <li><%= link_to "Зарегистрироваться", signup_path %></li>
				<% end %>
              </ul>
            </nav>
			</div>
		</div>
	  </div>
    </div>
</header>